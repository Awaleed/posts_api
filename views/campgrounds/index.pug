extends ../layout

block content
    div(class='container ')
        header(class='jumbotron')
            div(class='container')
                h1 Welcome To YelpCamp!
                p View our hand-picked campgrounds from all over the world
                p: a(class='btn btn-primary btn-large' href='/campgrounds/new') add new campground

        div(class="row text-center" style="display: flex; flex-wrap: wrap;")
            each campground in campgrounds
                div(class="col-md-3 col-sm-6")
                    div(class="thumbnail")
                        img(src= campground.image alt="Camp Image")
                        div(class="caption"): h4= campground.name

                        p: a(href='/campgrounds/' + campground._id class="btn btn-primary") More...

