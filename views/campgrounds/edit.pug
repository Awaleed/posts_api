extends ../layout

block content
    div(class='container')
        div(class='row')
            h1(class='text-center')= 'Edit ' + campground.name
            div(style='width: 30%; margin: 25px auto;')
                form(action='/campgrounds/' + campground._id + '?_method=put' method='POST')
                    div(class='form-group'): input(class='form-control' type='text' placeholder='Name' name='campground[name]' value= campground.name)
                    div(class='form-group'): input(class='form-control' type='number' placeholder='Price' name='campground[price]' value= campground.price  min='0.01' step='0.01')
                    div(class='form-group'): input(class='form-control' type='text' placeholder='Description' name='campground[description]' value=campground.description)
                    div(class='form-group'): input(class='form-control' type='text' placeholder='Image' name='campground[image]' value=campground.image)
                    div(class='form-group'): input(class='btn btn-primary btn-large btn-block' type='submit')
