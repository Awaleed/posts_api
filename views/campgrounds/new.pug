extends ../layout

block content
    div(class='container')
        div(class='row')
            h1(class='text-center') Create a New Campground
            div(style='width: 30%; margin: 25px auto;')
                form(action='/campgrounds' method='POST')
                    div(class='form-group'): input(class='form-control' type='text' placeholder='Name' name='campground[name]')
                    div(class='form-group'): input(class='form-control' type='number' placeholder='Price' name='campground[price]' min='0.01' step='0.01')
                    div(class='form-group'): input(class='form-control' type='text' placeholder='Description' name='campground[description]')
                    div(class='form-group'): input(class='form-control' type='text' placeholder='Image' name='campground[image]')
                    div(class='form-group'): input(class='btn btn-primary btn-large btn-block' type='submit')
